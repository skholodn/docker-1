docker run -it --name Abathur -v "$HOME":/root -p 3000:3000 python:2-slim bash -c "pip install flask; echo 'from flask import Flask' > /root/hello.py; echo 'app = Flask(__name__)' >> /root/hello.py; echo \"@app.route('/')\" >> /root/hello.py; echo 'def hello_world():' >> /root/hello.py; echo '   return \"<h1>Hello, World</h1>\"' >> /root/hello.py; echo 'app.run(host=\"0.0.0.0\", port=3000)' >> /root/hello.py; python /root/hello.py"
